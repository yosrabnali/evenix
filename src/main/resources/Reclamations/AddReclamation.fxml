<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Reclamations.AddReclamationController">
    <stylesheets>
        <URL value="@../css/reclamation-style.css" />
    </stylesheets>
    <stylesheets>
        <URL value="@../css/custom_buttons_style.css" />
    </stylesheets>



    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="38.0" AnchorPane.rightAnchor="62.8" AnchorPane.topAnchor="50.0">

        <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Add a Complaint" />

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Title:" />
            <TextField fx:id="titreField" prefWidth="300" promptText="Enter the Title" />
        </VBox>

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Description:" />
            <TextArea fx:id="descriptionField" prefHeight="100" prefWidth="300" promptText="Enter the Description" wrapText="true" />
        </VBox>

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Date:" />
            <DatePicker fx:id="datePicker" disable="true" prefWidth="300" style="-fx-background-color: #E0E0E0; -fx-opacity: 1;" />

        </VBox>

        <!-- ✅ CHAMP DU FICHIER AU-DESSUS DES BOUTONS -->
        <VBox spacing="10">
            <Label style="-fx-font-weight: bold;" text="File:" />
            <HBox spacing="10">
                <Button onAction="#handleFileChooser" text=" Choose a File" />
                <Label fx:id="fileNameLabel" prefHeight="50.0" prefWidth="110.0" text="No file selected" />
            </HBox>
        </VBox>

        <!-- ✅ BOUTONS PLACÉS EN DESSOUS -->
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleAddReclamation" styleClass="primary-button" text="Add" />
            <Button onAction="#handleCancel" styleClass="secondary-button" text="Cancel" />
            <Button onAction="#handleViewListReclamation" styleClass="neutral-button" text="View the list" />
        </HBox>

    </VBox>
</AnchorPane>
