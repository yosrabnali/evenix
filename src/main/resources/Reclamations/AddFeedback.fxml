<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Reclamations.AddFeedbackController">

    <stylesheets>
        <URL value="@../css/custom_feedback_style.css" />
    </stylesheets>
    <stylesheets>
        <URL value="@../css/feedback-style.css" />
    </stylesheets>

    <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="20" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">

        <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Add response" />

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Description:" />
            <TextArea fx:id="descriptionField" prefHeight="100" prefWidth="300" promptText=" Enter the Description" wrapText="true" />
        </VBox>

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Status:" />
            <ComboBox fx:id="etatComboBox" prefWidth="300" promptText="Select a status" />
        </VBox>

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Date:" />
            <DatePicker fx:id="dateField" disable="true" prefWidth="300" style="-fx-background-color: #E0E0E0; -fx-opacity: 1;" />
        </VBox>

        <!-- Champ pour l'adresse email de l'utilisateur -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="User's email:" />
            <TextField fx:id="userEmailField" prefWidth="300" promptText="Enter the user's email address" />
        </VBox>


        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="saveButton" onAction="#handleSaveButtonAction" styleClass="primary-button" text="Save" />
            <Button fx:id="cancelButton" onAction="#handleCancelButtonAction" styleClass="secondary-button" text="Cancel" />
            <Button onAction="#handleViewFeedbackList" styleClass="neutral-button" text="View the list" />

        </HBox>
    </VBox>
</AnchorPane>
