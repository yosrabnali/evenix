<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox spacing="20" styleClass="card-container" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.controllers.ArticlesController">
    <stylesheets>
        <URL value="@styles/main.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Barre de menu avec fond bleu -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 15 20; -fx-background-radius: 10;">
        <!-- Logo -->
        <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" preserveRatio="true">
            <image>
                <Image url="@images/x.png"/>
            </image>
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </ImageView>
        
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Blog" />
        
        <!-- Spacer pour pousser la barre de recherche vers la droite -->
        <Region HBox.hgrow="ALWAYS" />
        
        <HBox alignment="CENTER" spacing="15">
            <TextField fx:id="searchField" prefWidth="300" promptText="Rechercher..." styleClass="search-field" />
            <DatePicker fx:id="datePicker" promptText="Filtrer par date" styleClass="date-picker" />
            <Button onAction="#resetFilters" styleClass="action-button" text="RÃ©initialiser les filtres" />
        </HBox>
    </HBox>

    <ListView fx:id="articlesListView" styleClass="list-view" VBox.vgrow="ALWAYS" />
</VBox>
