<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.main.controllers.AjoutArticleController"
      styleClass="card-container">
    <stylesheets>
        <URL value="@styles/main.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Publication" styleClass="title"/>

    <VBox styleClass="card-container">
        <TextField fx:id="auteurField" 
                  promptText="Auteur"
                  styleClass="card-text"/>

        <TextField fx:id="titreField" 
                  promptText="Titre"
                  styleClass="card-text"/>

        <VBox styleClass="image-preview-container" spacing="15">
            <Button text="SÃ©lectionner une image" 
                    onAction="#onSelectImageClick"
                    styleClass="select-image-button"/>
            <ImageView fx:id="imagePreview" 
                      styleClass="image-preview"
                      fitHeight="200" 
                      fitWidth="300" 
                      preserveRatio="true"/>
        </VBox>

        <TextArea fx:id="contenuArea" 
                  promptText="Contenu de l'article" 
                  styleClass="article-content-area"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Retour" 
                    onAction="#onRetourClick"
                    styleClass="action-button, back-button"/>
            <Button text="Ajouter" 
                    onAction="#onAjouterButtonClick"
                    styleClass="action-button, add-button"/>
        </HBox>
    </VBox>
</VBox>
