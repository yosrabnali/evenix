<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UserMainLayoutController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #ECECEC;">
    <children>
        <BorderPane fx:id="mainBorderPane" AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0">
            <!-- Sidebar Gauche -->
            <left>
                <VBox prefWidth="300" spacing="0">
                    <!-- Haut : Logo, Informations Utilisateur et Barre de recherche -->
                    <VBox prefWidth="300" spacing="15" alignment="CENTER" style="-fx-background-color: #DCDCDC; -fx-padding: 20;">
                        <!-- Logo -->
                        <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                            <image>
                                <!-- Assurez-vous que l'image se trouve dans src/main/resources/images/logo.png -->
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                        <!-- Informations Utilisateur -->
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="lblFirstName" text="Prénom" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                            <Label fx:id="lblLastName" text="Nom" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        </VBox>
                        <!-- Barre de recherche -->
                        <HBox spacing="10" alignment="CENTER">
                            <TextField promptText="Recherche..."
                                       style="-fx-background-radius: 20; -fx-padding: 6; -fx-pref-width: 160;"/>
                            <Button text="Search"
                                    style="-fx-background-color: #FFFFFF; -fx-text-fill: #333; -fx-background-radius: 20; -fx-padding: 5 15;"/>
                        </HBox>
                    </VBox>

                    <!-- Milieu : Boutons de Navigation -->
                    <VBox prefWidth="300" spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #3C6382, #2A465A);">
                        <Button fx:id="btnhome" text="Home" maxWidth="Infinity" prefHeight="60"
                                onAction="#handleHome"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;"/>
                        <Button text="Event" maxWidth="Infinity" prefHeight="60"
                                onAction="#handleEvent"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;"/>
                        <Button text="Discussion" maxWidth="Infinity" prefHeight="60"
                                onAction="#handleDiscussion"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;"/>
                        <Button fx:id="btnComplaint" text="Complaint" maxWidth="Infinity" prefHeight="60"
                                onAction="#handleComplaint"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;"/>

                    </VBox>

                    <!-- Bas : Bouton Logout -->
                    <VBox prefWidth="300" spacing="10" alignment="CENTER" style="-fx-background-color: #DCDCDC; -fx-padding: 20;">
                        <Button text="Logout" maxWidth="Infinity" prefHeight="50"
                                style="-fx-background-color: #B0B0B0; -fx-text-fill: #333; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                    </VBox>
                </VBox>
            </left>

            <!-- Centre : Zone dynamique de contenu -->
            <center>
                <!-- Ce conteneur contiendra le contenu à changer selon le bouton cliqué -->
                <VBox fx:id="centerContent" spacing="15" alignment="CENTER" style="-fx-padding: 20;">
                    <!-- Par défaut, contenu de bienvenue -->
                    <Label text="Bienvenue !" style="-fx-font-size: 24; -fx-text-fill: #333;"/>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
