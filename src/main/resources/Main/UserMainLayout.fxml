<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UserMainLayoutController"
            prefWidth="800" prefHeight="600">

    <!-- Feuille de style (facultative, si vous avez un fichier styles.css) -->
    <stylesheets>
        <URL value="@../css/styles.css"/>
    </stylesheets>

    <children>

        <!-- 1) ImageView qui sert de fond d'écran -->
        <ImageView fx:id="backgroundImage"
                   preserveRatio="false"
                   pickOnBounds="false"
                   AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <image>
                <Image url="@../images/back.jpg"/>
            </image>
        </ImageView>

        <!-- 2) Barre horizontale supérieure, maintenant transparente -->
        <HBox fx:id="topBar"
              alignment="CENTER_LEFT"
              prefHeight="60" spacing="10"
              AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              style="-fx-background-color: transparent;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.4, 0, 2);
                     -fx-padding: 0 20;">
            <children>
                <Label text="MyApp"
                       style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Profil utilisateur -->
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="userPhotoTop"
                               fitWidth="40" fitHeight="40" preserveRatio="true">
                        <image>
                            <Image url="@../images/userphoto.jpg"/>
                        </image>
                        <clip>
                            <Circle centerX="20" centerY="20" radius="20"/>
                        </clip>
                    </ImageView>
                    <Label fx:id="userNameTop" text="John Doe"
                           style="-fx-text-fill: white; -fx-font-size: 14;"/>
                </HBox>
            </children>
        </HBox>

        <!-- 3) Barre latérale gauche (dock) -->
        <VBox fx:id="leftBar"
              alignment="BOTTOM_CENTER"
              prefWidth="60" spacing="15"
              AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              style="-fx-background-color: #ffffff00;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.4, 2, 2);
                     -fx-padding: 0;">
            <children>
                <Region VBox.vgrow="ALWAYS"/>
                <ImageView fx:id="homeIcon"
                           styleClass="icon"
                           fitWidth="40" fitHeight="40"
                           preserveRatio="true"
                           onMouseClicked="#handleHome" rotate="-10">
                    <image>
                        <Image url="@../images/iconhome.jpg"/>
                    </image>
                </ImageView>
                <ImageView fx:id="eventIcon"
                           styleClass="icon"
                           fitWidth="40" fitHeight="40"
                           preserveRatio="true"
                           onMouseClicked="#handleEvent" rotate="-10">
                    <image>
                        <Image url="@../images/iconevent.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="publicationIcon"
                           styleClass="icon"
                           fitWidth="40" fitHeight="40"
                           preserveRatio="true"
                           onMouseClicked="#handlePublication" rotate="-10">
                    <image>
                        <Image url="@../images/iconpublication.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="complaintIcon"
                           styleClass="icon"
                           fitWidth="40" fitHeight="40"
                           preserveRatio="true"
                           onMouseClicked="#handleComplaint" rotate="-10">
                    <image>
                        <Image url="@../images/iconcomplaint.png"/>
                    </image>
                </ImageView>
                <Region VBox.vgrow="ALWAYS"/>
                <ImageView fx:id="logoutIcon"
                           styleClass="icon"
                           fitWidth="40" fitHeight="40"
                           preserveRatio="true"
                           onMouseClicked="#handleLogout" rotate="-10">
                    <image>
                        <Image url="@../images/logout.png"/>
                    </image>
                </ImageView>
            </children>
        </VBox>

        <!-- 4) Zone principale de contenu -->
        <BorderPane fx:id="mainContent"
                    AnchorPane.topAnchor="60"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="60"
                    AnchorPane.rightAnchor="10"
                    style="-fx-background-color: #FFFFFF;
                           -fx-padding: 20;">
            <center>
                <VBox fx:id="centerContent" spacing="15" alignment="CENTER">
                    <Label text="Bienvenue sur la page d'accueil !"
                           style="-fx-font-size: 24; -fx-text-fill: #333;"/>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
