<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="590.0" prefWidth="679.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Events.AddEventController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter un Événement" />

    <!-- Champs de saisie visibles -->
    <TextField fx:id="txtTitre" promptText="Titre" />
    <TextField fx:id="txtDescription" promptText="Description" />
    <TextField fx:id="txtNBplaces" promptText="Nombre de places" />
    <TextField fx:id="txtPrix" promptText="Prix" />
    <TextField fx:id="txtLieu" promptText="Lieu" />

    <!-- ComboBox pour l'état de l'événement -->
    <ComboBox fx:id="comboEtat" promptText="État de l'événement" />

    <!-- ComboBox pour le type d'événement -->
    <ComboBox fx:id="comboType" promptText="Type d'événement" />

    <!-- Zone pour choisir une image -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="txtImage" prefWidth="200" promptText="Chemin de l'image" />
        <Button onAction="#handleChooseImage" text="Choisir image" />
    </HBox>



    <!-- DatePicker pour la date -->
    <DatePicker fx:id="datePicker" promptText="Date" />

    <!-- ComboBox cachée pour le rôle (Admin/User) -->
    <ComboBox fx:id="comboRole" promptText="Rôle de l'utilisateur" visible="false" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleSave" text="Save" />
        <Button onAction="#handleCancel" text="Cancel" />
    </HBox>
</VBox>
