<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Events.AddEventController"
      prefHeight="500" prefWidth="500" spacing="15" alignment="CENTER"
      style="-fx-background-color: #F9F9F9;
             -fx-padding: 30;
             -fx-border-color: #DDD;
             -fx-border-radius: 8;
             -fx-background-radius: 8;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0, 2);">

    <!-- Titre principal -->
    <Label text="Add event"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Formulaire de saisie -->
    <VBox spacing="12" alignment="CENTER" prefWidth="400">
        <TextField fx:id="txtTitre" promptText="Title"
                   style="-fx-background-color: white;
                          -fx-background-radius: 5;
                          -fx-border-color: #ccc;
                          -fx-border-radius: 5;
                          -fx-padding: 10;"/>
        <TextField fx:id="txtDescription" promptText="Description"
                   style="-fx-background-color: white;
                          -fx-background-radius: 5;
                          -fx-border-color: #ccc;
                          -fx-border-radius: 5;
                          -fx-padding: 10;"/>
        <TextField fx:id="txtNBplaces" promptText="Places"
                   style="-fx-background-color: white;
                          -fx-background-radius: 5;
                          -fx-border-color: #ccc;
                          -fx-border-radius: 5;
                          -fx-padding: 10;"/>
        <TextField fx:id="txtPrix" promptText="Price"
                   style="-fx-background-color: white;
                          -fx-background-radius: 5;
                          -fx-border-color: #ccc;
                          -fx-border-radius: 5;
                          -fx-padding: 10;"/>
        <TextField fx:id="txtLieu" promptText="Location"
                   style="-fx-background-color: white;
                          -fx-background-radius: 5;
                          -fx-border-color: #ccc;
                          -fx-border-radius: 5;
                          -fx-padding: 10;"/>

        <!-- HBox for Event Status, Type, and Date on the same row -->
        <HBox spacing="12" alignment="CENTER">
            <ComboBox fx:id="comboEtat" promptText="Event status"
                      style="-fx-background-color: white;
                             -fx-background-radius: 5;
                             -fx-border-color: #ccc;
                             -fx-border-radius: 5;
                             -fx-padding: 10;"/>
            <ComboBox fx:id="comboType" promptText="Type"
                      style="-fx-background-color: white;
                             -fx-background-radius: 5;
                             -fx-border-color: #ccc;
                             -fx-border-radius: 5;
                             -fx-padding: 10;"/>
            <DatePicker fx:id="datePicker" promptText="Date"
                        style="-fx-background-color: white;
                               -fx-background-radius: 5;
                               -fx-border-color: #ccc;
                               -fx-border-radius: 5;
                               -fx-padding: 10;"/>
        </HBox>

        <!-- Choix de l'image -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="txtImage" prefWidth="220" promptText="Image path"
                       style="-fx-background-color: white;
                              -fx-background-radius: 5;
                              -fx-border-color: #ccc;
                              -fx-border-radius: 5;
                              -fx-padding: 10;"/>
            <Button text="Choisir image" onAction="#handleChooseImage"
                    style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-background-radius: 5;
                           -fx-padding: 10 20;
                           -fx-cursor: hand;"/>
        </HBox>

        <!-- Field caché pour le rôle de l'utilisateur -->
        <ComboBox fx:id="comboRole" promptText="Rôle de l'utilisateur" visible="false"
                  style="-fx-background-color: white;
                         -fx-background-radius: 5;
                         -fx-border-color: #ccc;
                         -fx-border-radius: 5;
                         -fx-padding: 10;"/>
    </VBox>

    <!-- Boutons d'action -->
    <HBox alignment="CENTER" spacing="20">
        <Button text="Save" onAction="#handleSave"
                style="-fx-background-color: #287b8d;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 5;
                       -fx-padding: 10 25;
                       -fx-cursor: hand;"/>
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #B0B0B0;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 5;
                       -fx-padding: 10 25;
                       -fx-cursor: hand;"/>
    </HBox>
</VBox>
