<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventContentController"
            stylesheets="@../css/styles.css"
            style="">

    <children>
        <!-- TabPane with smooth UX/UI -->
        <TabPane fx:id="mainTabPane"
                 tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.topAnchor="0.0"
                 AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 style="
                     -fx-background-color: #a1d1ff;
                     -fx-background-radius: 10;
                     -fx-padding: 0;
                     -fx-border-radius: 10;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 0);
                 ">

            <tabs>
                <!-- Tab "Events" -->
                <Tab>
                    <graphic>
                        <Label text="Events"
                               style="
                                   -fx-background-color: #ffffff;
                                   -fx-text-fill: #3a6d9b;
                                   -fx-font-size: 16px;
                                   -fx-font-weight: bold;
                                   -fx-padding: 10;
                                   -fx-background-radius: 5;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0.5, 0, 2);
                               "/>
                    </graphic>
                    <content>
                        <ScrollPane hbarPolicy="ALWAYS"
                                    vbarPolicy="NEVER"
                                    fitToWidth="true"
                                    prefHeight="500"
                                    style="
                                        -fx-background-insets: 0;
                                        -fx-padding: 0;
                                    ">
                            <content>
                                <FlowPane fx:id="flowPaneEvents"
                                          hgap="20"
                                          vgap="20"
                                          style="
                                              -fx-padding: 20;
                                              -fx-background-color: white;
                                              -fx-background-radius: 10;
                                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0, 2);
                                          "/>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- Tab "Reservations" -->
                <Tab onSelectionChanged="#showReservationList">
                    <graphic>
                        <Label text="Reservations"
                               style="
                                   -fx-background-color: #ffffff;
                                   -fx-text-fill: #3a6d9b;
                                   -fx-font-size: 16px;
                                   -fx-font-weight: bold;
                                   -fx-padding: 10;
                                   -fx-background-radius: 5;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0.5, 0, 2);
                               "/>
                    </graphic>
                    <content>
                        <ScrollPane hbarPolicy="ALWAYS"
                                    vbarPolicy="NEVER"
                                    fitToWidth="true"
                                    prefHeight="500"
                                    style="
                                        -fx-background-insets: 0;
                                        -fx-padding: 10;
                                    ">
                            <content>
                                <FlowPane fx:id="flowPaneReservation"
                                          onMouseClicked="#showReservationList"
                                          pickOnBounds="true"
                                          hgap="20"
                                          vgap="20"
                                          style="
                                              -fx-padding: 20;
                                              -fx-background-color: white;
                                              -fx-background-radius: 10;
                                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0, 2);
                                          "/>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
