<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventContentController"
            stylesheets="@../css/styles.css">
    <children>
        <TabPane fx:id="mainTabPane"
                 tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.topAnchor="0.0"
                 AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 styleClass="modern-tab-pane">
            <tabs>
                <!-- Events Tab -->
                <Tab text="Events">
                    <content>
                        <ScrollPane hbarPolicy="ALWAYS" vbarPolicy="NEVER"
                                    fitToWidth="true" prefHeight="500"
                                    style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 10;">
                            <content>
                                <FlowPane fx:id="flowPaneEvents" hgap="20" vgap="20"
                                          style="-fx-padding: 20;
                                                 -fx-background-color: linear-gradient(to bottom, #ffffff, #309fc7);
                                                 -fx-background-image: url('images/back1.jpg');
                                                 -fx-background-radius: 10;
                                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.5, 0, 2);"/>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- Reservations Tab -->
                <!-- Reservations Tab -->
                <Tab text="Reservations" onSelectionChanged="#showReservationList">
                    <content >
                        <ScrollPane hbarPolicy="ALWAYS" vbarPolicy="NEVER"
                                    fitToWidth="true" prefHeight="500"
                                    style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 10;">
                            <content>
                                <FlowPane fx:id="flowPaneReservation"
                                          onMouseClicked="#showReservationList"
                                          pickOnBounds="true"
                                          hgap="20" vgap="20"
                                          style="-fx-padding: 20;
                 -fx-background-color: linear-gradient(to bottom, #ffffff, #309fc7);
                 -fx-background-image: url('images/back1.jpg');
                 -fx-background-radius: 10;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.5, 0, 2);"/>

                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
