<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.Group?>
<?import javafx.scene.layout.Region?>
<StackPane prefWidth="250" prefHeight="280"
           styleClass="event-card-container"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.Events.EventCardController"
           stylesheets="@../css/EventCard.css">

    <!-- Background image filling the card -->
    <ImageView fx:id="imageView" fitWidth="250" fitHeight="280" preserveRatio="false" styleClass="event-image"/>

    <!-- Semi-transparent black overlay for contrast -->
    <Rectangle width="250" height="280" fill="black" opacity="0.2"/>

    <!-- Overlay content: All children appear on top of the image -->
    <BorderPane prefWidth="250" prefHeight="280">

        <!-- Top section: Price tag aligned to the right -->


        <!-- Center section: Main event details -->
        <center>
            <VBox alignment="CENTER" spacing="30">
                <HBox alignment="TOP_RIGHT" maxWidth="-1">
                    <Region HBox.hgrow="ALWAYS"/>

                    <Group>
                        <HBox.margin>
                            <Insets top="0" right="5" bottom="110" left="0"/>
                        </HBox.margin>
                    <HBox alignment="TOP_RIGHT" maxWidth="-1" style="-fx-background-color: #a69f9f; -fx-background-radius: 5;">

                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                        <Label fx:id="lblPrice" text="20" style="-fx-text-fill: white;"/>
                    </HBox>
                </Group>
            </HBox>

                <VBox alignment="CENTER" spacing="10">

                    <Label fx:id="lblTitle" text="Event Title" style="-fx-text-fill: white;" styleClass="event-title"/>
                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="lblLieu" text="Location" style="-fx-text-fill: white;" styleClass="event-info"/>
                        <Label text="•" style="-fx-text-fill: white;"/>
                        <Label fx:id="descriptiontxt" text="description" style="-fx-text-fill: white;" styleClass="event-info"/>
                        <Label text="•" style="-fx-text-fill: white;"/>
                        <Label fx:id="lblDate" text="Date" style="-fx-text-fill: white;" styleClass="event-info"/>
                    </HBox>
                    <Button fx:id="btnReserve" text="Book Now" styleClass="reserve-button"/>
                    <Button fx:id="btncompleted" text="completed" styleClass="completed-button"/>
                    <Button fx:id="btncanceled" text="canceled" styleClass="canceled-button"/>

                </VBox>



            </VBox>
        </center>

    </BorderPane>
</StackPane>
