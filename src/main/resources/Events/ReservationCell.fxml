<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Events.ReservationCellController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: white;
             -fx-background-radius: 10;
             -fx-border-color: #a0b2c0;
             -fx-border-radius: 10;
             -fx-border-width: 2;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.5, 0, 0);">
    <children>
        <!-- Image de l'événement avec effet de shadow géré en CSS -->
        <ImageView fx:id="eventImageView"
                   fitHeight="80"
                   fitWidth="80"
                   preserveRatio="true"
                   styleClass="event-image"/>

        <!-- Première colonne d'informations -->
        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="reservation-info">
            <children>
                <Label fx:id="lblDate" text="Date: 2025-03-10" styleClass="reservation-date"/>
                <Label fx:id="lblNbPlaces" text="Places: 3" styleClass="reservation-places"/>
            </children>
        </VBox>

        <!-- Deuxième colonne d'informations -->
        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="reservation-details">
            <children>
                <Label fx:id="lblPaymentMethod" text="Payment: Credit Card" styleClass="reservation-payment"/>
                <Label fx:id="lblEventName" text="Event: Spring Gala" styleClass="reservation-event-name"/>
            </children>
        </VBox>

        <!-- Espaceur pour pousser le bouton vers la droite -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Bouton de suppression -->
        <Button fx:id="btnDelete"
                text="Delete"
                onAction="#handleDelete"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-border-radius: 5;"/>
    </children>
</HBox>
