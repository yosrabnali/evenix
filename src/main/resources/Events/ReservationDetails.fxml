<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Events.ReservationDetailsController"
      spacing="20" alignment="CENTER"
      styleClass="reservation-details-container">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Titre principal -->
    <Label text="Event details" styleClass="reservation-title"/>

    <!-- Séparateur -->
    <Separator styleClass="reservation-separator"/>

    <!-- Informations sur l'événement -->
    <VBox spacing="12" alignment="CENTER_LEFT" styleClass="reservation-info">
        <children>
            <Label fx:id="lblTitle" text="Titre de l'événement" styleClass="reservation-info-title"/>
            <Label fx:id="lblDescription" text="Description de l'événement" wrapText="true" styleClass="reservation-info-description"/>
            <Label fx:id="lblDate" text="Date" styleClass="reservation-info-date"/>
            <Label fx:id="lblLieu" text="Location" styleClass="reservation-info-location"/>
            <Label fx:id="lblprix" text="Price of tickets" styleClass="reservation-info-price"/>
        </children>
    </VBox>

    <!-- Sélection du nombre de places -->
    <HBox spacing="15" alignment="CENTER" styleClass="reservation-ticket-selection">
        <children>
            <Button fx:id="btnDecrease" text="–" onAction="#handleDecrease" styleClass="ticket-decrease-button"/>
            <Label fx:id="lblTicketCount" text="0" styleClass="ticket-count-label"/>
            <Button fx:id="btnIncrease" text="+" onAction="#handleIncrease" styleClass="ticket-increase-button"/>
        </children>
    </HBox>

    <!-- Affichage du prix total -->
    <Label fx:id="lblPrice" text="Total Price: $0" styleClass="reservation-total-price"/>

    <!-- Sélection de la méthode de paiement -->
    <ComboBox fx:id="comboEtat" promptText="Payement method" styleClass="reservation-payment-method"/>

    <!-- Boutons d'action -->
    <HBox spacing="20" alignment="CENTER" styleClass="reservation-action-buttons">
        <children>
            <Button fx:id="btnConfirmReservation" text="Confirm the booking" onAction="#handleConfirmReservation" styleClass="reservation-confirm-button"/>
            <Button fx:id="btnCancelReservation" text="Cancel" onAction="#handleCancelReservation" styleClass="reservation-cancel-button"/>
        </children>
    </HBox>
</VBox>
