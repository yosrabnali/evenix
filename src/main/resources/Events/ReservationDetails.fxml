<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Events.ReservationDetailsController">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <!-- Inner StackPane to center the content -->
                <StackPane alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" maxWidth="800" spacing="20" styleClass="reservation-details-container">
                            <padding>
                                <Insets bottom="30" left="30" right="30" top="30" />
                            </padding>

                            <!-- Cover image container with fixed height -->
                            <AnchorPane minHeight="250" prefHeight="250">
                                <children>
                                    <ImageView fx:id="coverImage" fitHeight="200.0" fitWidth="700.0" preserveRatio="false"
                                               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                        <image>
                                            <Image url="@../images/event2.jpg" />
                                        </image>
                                    </ImageView>
                                </children>
                            </AnchorPane>

                            <!-- Main title -->
                            <Label alignment="CENTER" styleClass="reservation-title" text="Event details" />

                            <!-- Separator -->
                            <Separator styleClass="reservation-separator" />

                            <!-- Scrollable and centered event information -->
                            <VBox alignment="CENTER" spacing="12" styleClass="reservation-info">
                                <children>
                                    <Label fx:id="lblTitle" styleClass="reservation-info-title" text="Titre de l'événement" />
                                    <Label fx:id="lblDescription" styleClass="reservation-info-description" text="Description de l'événement" wrapText="true" />
                                    <Label fx:id="lblDate" styleClass="reservation-info-date" text="Date" />
                                    <Label fx:id="lblLieu" styleClass="reservation-info-location" text="Location" />
                                    <Label fx:id="lblprix" styleClass="reservation-info-price" text="Price of tickets" />
                                </children>
                            </VBox>

                            <!-- Ticket selection -->
                            <HBox alignment="CENTER" spacing="15" styleClass="reservation-ticket-selection">
                                <children>
                                    <Button fx:id="btnDecrease" onAction="#handleDecrease" styleClass="ticket-decrease-button" text="–" />
                                    <Label fx:id="lblTicketCount" styleClass="ticket-count-label" text="0" />
                                    <Button fx:id="btnIncrease" onAction="#handleIncrease" styleClass="ticket-increase-button" text="+" />
                                </children>
                            </HBox>

                            <!-- Total price display -->
                            <Label fx:id="lblPrice" styleClass="reservation-total-price" text="Total Price: $0" />

                            <!-- Payment method selection -->
                            <ComboBox fx:id="comboEtat" promptText="Payment method" styleClass="reservation-payment-method" />

                            <!-- Action buttons -->
                            <HBox alignment="CENTER" spacing="20" styleClass="reservation-action-buttons">
                                <children>
                                    <Button fx:id="btnConfirmReservation" onAction="#handleConfirmReservation" styleClass="reservation-confirm-button" text="Confirm the booking" />
                                    <Button fx:id="btnCancelReservation" onAction="#handleCancelReservation" styleClass="reservation-cancel-button" text="Cancel" />
                                </children>
                            </HBox>
                        </VBox>
                    </children>
                </StackPane>
            </content>
        </ScrollPane>
    </children>
</StackPane>
