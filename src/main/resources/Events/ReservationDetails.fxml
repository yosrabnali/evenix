<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Events.ReservationDetailsController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #ffffff, #ecf0f1);
             -fx-background-radius: 10;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 10, 0.7, 0, 4);">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Titre principal -->
    <Label text="Détails de l'événement"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Séparateur -->
    <Separator style="-fx-background-color: #bdc3c7; -fx-pref-height: 2;"/>

    <!-- Informations sur l'événement -->
    <VBox spacing="12" alignment="CENTER_LEFT">
        <Label fx:id="lblTitle" text="Titre de l'événement"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        <Label fx:id="lblDescription" text="Description de l'événement"
               wrapText="true"
               style="-fx-font-size: 15px; -fx-text-fill: #7f8c8d;"/>
        <Label fx:id="lblDate" text="Date de l'événement"
               style="-fx-font-size: 15px; -fx-text-fill: #7f8c8d;"/>
        <Label fx:id="lblLieu" text="Lieu de l'événement"
               style="-fx-font-size: 15px; -fx-text-fill: #7f8c8d;"/>
        <Label fx:id="lblprix" text="Prix de l'événement"
               style="-fx-font-size: 15px; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <!-- Sélection du nombre de places -->
    <HBox spacing="15" alignment="CENTER">
        <!-- Bouton de décrémentation -->
        <Button fx:id="btnDecrease" text="–" onAction="#handleDecrease"
                style="-fx-background-color: #e74c3c;
                       -fx-text-fill: white;
                       -fx-font-size: 20px;
                       -fx-padding: 10 20;
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"/>
        <!-- Affichage du nombre de tickets -->
        <Label fx:id="lblTicketCount" text="0"
               style="-fx-font-size: 18px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2c3e50;
                      -fx-min-width: 40;
                      -fx-alignment: center;"/>
        <!-- Bouton d'incrémentation -->
        <Button fx:id="btnIncrease" text="+" onAction="#handleIncrease"
                style="-fx-background-color: #27ae60;
                       -fx-text-fill: white;
                       -fx-font-size: 20px;
                       -fx-padding: 10 20;
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"/>
    </HBox>

    <!-- Affichage du prix total -->
    <Label fx:id="lblPrice" text="Total Price: $0"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Sélection de la méthode de paiement -->
    <ComboBox fx:id="comboEtat" promptText="Méthode de paiement"
              style="-fx-pref-width: 270px;
                     -fx-padding: 8;
                     -fx-border-color: #bdc3c7;
                     -fx-border-radius: 5;
                     -fx-background-radius: 5;"/>

    <!-- Boutons d'action -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btnConfirmReservation" text="Confirmer la réservation"
                onAction="#handleConfirmReservation"
                style="-fx-background-color: #2980b9;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-padding: 12 30;
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"/>
        <Button fx:id="btnCancelReservation" text="Annuler"
                onAction="#handleCancelReservation"
                style="-fx-background-color: #95a5a6;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-padding: 12 30;
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"/>
    </HBox>
</VBox>
