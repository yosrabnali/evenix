<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@../css/Reservationdetails.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Events.ReservationDetailsController">
    <children>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true">
            <content>
                <!-- Inner StackPane to center the content -->
                <StackPane alignment="CENTER">
                    <children>
                        <!-- Conteneur principal sans boîte arrondie -->
                        <VBox alignment="CENTER_LEFT" maxWidth="800" spacing="20">
                            <padding>
                                <Insets bottom="30" left="30" right="30" top="30" />
                            </padding>

                            <!-- Cover image container with fixed height -->
                            <AnchorPane minHeight="250" prefHeight="250">
                                <children>
                                    <ImageView fx:id="coverImage" fitHeight="200.0" fitWidth="700.0" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                </children>
                            </AnchorPane>

                            <!-- Main title reste centré -->
                            <Label alignment="CENTER" styleClass="reservation-title" text="Event details" />

                            <!-- Separator -->
                            <Separator styleClass="reservation-separator" />

                            <!-- Informations de l'événement alignées à gauche -->
                            <VBox alignment="CENTER_LEFT" spacing="12" styleClass="reservation-info">
                                <children>
                                    <Label fx:id="lblTitle" styleClass="reservation-info-title" text="Titre de l'événement" />
                                    <Label fx:id="lblDescription" styleClass="reservation-info-description" text="Description de l'événement" wrapText="true" />
                           <Pane prefHeight="200.0" prefWidth="660.0" />
                                    <Label fx:id="lblDate" styleClass="reservation-info-date" text="Date" />
                                    <Label fx:id="lblLieu" styleClass="reservation-info-location" text="Location" />
                                    <Label fx:id="lblprix" styleClass="reservation-info-price" text="Price of tickets" />
                                </children>
                            </VBox>

                            <!-- Sélection des tickets alignée à gauche -->
                            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="reservation-ticket-selection">
                                <children>
                                    <Button fx:id="btnDecrease" onAction="#handleDecrease" styleClass="ticket-decrease-button" text="–" />
                                    <Label fx:id="lblTicketCount" styleClass="ticket-count-label" text="0" />
                                    <Button fx:id="btnIncrease" onAction="#handleIncrease" styleClass="ticket-increase-button" text="+" />
                                </children>
                            </HBox>

                            <!-- Affichage du prix total -->
                            <Label fx:id="lblPrice" styleClass="reservation-total-price" text="Total Price: $0" />

                            <!-- Sélection du mode de paiement -->
                            <ComboBox fx:id="comboEtat" promptText="Payment method" styleClass="reservation-payment-method" />

                            <!-- Boutons d'action alignés à gauche -->
                            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="reservation-action-buttons">
                                <children>
                                    <Button fx:id="btnConfirmReservation" onAction="#handleConfirmReservation" styleClass="reservation-confirm-button" text="Confirm the booking" />
                                    <Button fx:id="btnCancelReservation" onAction="#handleCancelReservation" styleClass="reservation-cancel-button" text="Cancel" />
                                </children>
                            </HBox>
                        </VBox>
                    </children>
                </StackPane>
            </content>
        </ScrollPane>
    </children>
</StackPane>
