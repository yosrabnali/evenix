<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventAdminController"
            style="-fx-background-color: #ECF0F1;">

    <!-- Header with title and add button -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-padding: 15; -fx-background-color: linear-gradient(to right, #3498db, #9b59b6);">
            <Label text="List event"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+" fx:id="btnAddEvent" onAction="#handleAddEvent"
                    style="-fx-font-size: 22px; -fx-text-fill: white; -fx-background-color: #27ae60; -fx-background-radius: 5; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Center area: Responsive and centered event list -->
    <center>
        <StackPane alignment="CENTER">
            <!-- ScrollPane ensures content remains accessible on smaller screens -->
            <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
                <content>
                    <!-- FlowPane for displaying events; its wrapping width can be adjusted -->
                    <FlowPane fx:id="flowPaneEvents" hgap="20" vgap="20"
                              style="-fx-padding: 20;
                                     -fx-background-color: #F7F7F7;
                                     -fx-background-radius: 10;
                                     -fx-border-color: #DDD;
                                     -fx-border-radius: 10;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.5, 0, 2);"
                              prefWrapLength="600"/>
                </content>
            </ScrollPane>
        </StackPane>
    </center>

</BorderPane>
