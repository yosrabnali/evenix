<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventAdminController"
            styleClass="main-container">

    <!-- Lien vers la feuille de style -->
    <stylesheets>
        <URL value="@../css/EventAdmin.css"/>
    </stylesheets>

    <!-- Barre supérieure : Titre et bouton pour ajouter un événement -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="header-bar">
            <Label text="List event" styleClass="title-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+" fx:id="btnAddEvent" onAction="#handleAddEvent" styleClass="add-button"/>
        </HBox>
    </top>

    <!-- Zone centrale : contient un ScrollPane et un FlowPane pour les cartes -->
    <center>
        <StackPane alignment="CENTER">
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="event-scroll-pane">
                <content>
                    <FlowPane fx:id="flowPaneEvents" hgap="20" vgap="20" styleClass="event-container" prefWrapLength="900">

                        <!-- Exemple de carte "en dur" (démo).
                             Dans ton usage réel, tu peux la supprimer et
                             laisser ton contrôleur générer les cartes. -->
                        <children>
                            <VBox spacing="10" styleClass="event-card">
                                <children>
                                    <!-- Image (exemple) -->
                                    <Label text="(Image placeholder)" style="-fx-font-size: 12; -fx-text-fill: gray;"/>

                                    <!-- Titre de l'événement -->
                                    <Label text="Sample Title" styleClass="event-title"/>

                                    <!-- Boutons Edit / Delete -->
                                    <HBox spacing="10" styleClass="button-container">
                                        <children>
                                            <Button text="Edit" styleClass="btn-edit"/>
                                            <Button text="Delete" styleClass="btn-delete"/>
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>

                    </FlowPane>
                </content>
            </ScrollPane>
        </StackPane>
    </center>

</BorderPane>
