<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="361.0" prefWidth="232.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddmatController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Material" />

    <!-- Champs de saisie visibles -->
    <TextField fx:id="txtName" promptText="Name" styleClass="rounded-text-field" stylesheets="@../css/addmaterial.css"/>
    <TextField fx:id="txtPrice" promptText="Price" styleClass="rounded-text-field" stylesheets="@../css/addmaterial.css"/>
    <TextField fx:id="txtQuantity" promptText="Quantity" styleClass="rounded-text-field" stylesheets="@../css/addmaterial.css"/>
    <TextField fx:id="txtDescription" promptText="Description" styleClass="rounded-text-field" stylesheets="@../css/addmaterial.css"/>

    <!-- ComboBox pour l'état de l'événement -->
    <ComboBox fx:id="comboCategorie" promptText="Categorie" styleClass="rounded-combo-box" stylesheets="@../css/addmaterial.css"/>
   <ImageView fx:id="materialImg" fitHeight="42.0" fitWidth="93.0" pickOnBounds="true" preserveRatio="true" />

    <!-- Zone pour choisir une image -->
    <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="177.0" spacing="10">

        <Button onAction="#handleChooseImage" prefHeight="26.0" prefWidth="170.0" text="Choose image" styleClass="image-button" stylesheets="@../css/addmaterial.css"/>
    </HBox>






    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleSave" text="Save" styleClass="save-button" stylesheets="@../css/addmaterial.css"/>
        <Button cancelButton="true" onAction="#handleCancel" text="Cancel" styleClass="cancel-button" stylesheets="@../css/addmaterial.css" />
    </HBox>
</VBox>
