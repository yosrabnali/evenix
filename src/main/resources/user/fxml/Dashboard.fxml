<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UserDashboardController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="/css/Dashboard.css">

    <TabPane fx:id="tabPane" prefWidth="800.0" prefHeight="600.0"
             AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
             AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Onglet Liste -->
        <Tab text="Liste des Utilisateurs">
            <AnchorPane>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <VBox spacing="10" alignment="CENTER"
                          prefWidth="750.0" prefHeight="550.0">
                        <Label text="Liste des Utilisateurs" style="-fx-font-size: 18px;"/>

                        <TableView fx:id="userTable">
                            <columns>
                                <TableColumn text="Nom" fx:id="nomColumn"/>
                                <TableColumn text="Prénom" fx:id="prenomColumn"/>
                                <TableColumn text="Email" fx:id="emailColumn"/>
                                <TableColumn text="Téléphone" fx:id="telephoneColumn"/>
                                <TableColumn text="Rôle" fx:id="roleColumn"/>
                            </columns>
                        </TableView>

                        <HBox spacing="120" alignment="BASELINE_CENTER">
                            <Button text="Supprimer Sélection" onAction="#handleDeleteUser"
                                    style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
                            <Button fx:id="editUserButton" text="Modifier Utilisateur"
                                    onAction="#switchToModifierUtilisateur"
                                    style="-fx-background-color: #FF9800; -fx-text-fill: white;" disable="true"/>
                            <Button text="Ajouter Utilisateur" onAction="#switchToAjouterUtilisateur"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </AnchorPane>
        </Tab>

        <!-- Onglet Ajouter -->
        <Tab fx:id="AjouterUtilisateur" text="Ajouter Utilisateur">
            <AnchorPane>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <VBox spacing="10" alignment="CENTER"
                          prefWidth="750.0" prefHeight="550.0">
                        <Label text="Ajouter un Utilisateur" style="-fx-font-size: 18px;"/>

                        <VBox spacing="5">
                            <Label text="Nom:" />
                            <TextField fx:id="nomField" promptText="Entrez le nom"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Prénom:" />
                            <TextField fx:id="prenomField" promptText="Entrez le prénom"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Email:" />
                            <TextField fx:id="emailField" promptText="Entrez l'email"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Mot de passe:" />
                            <PasswordField fx:id="passwordField" promptText="Entrez le mot de passe"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Téléphone:" />
                            <TextField fx:id="telephoneField" promptText="Entrez le téléphone"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Rôle:" />
                            <ComboBox fx:id="roleComboBox" promptText="Sélectionnez un rôle"/>
                        </VBox>

                        <Button text="Ajouter" onAction="#handleAddUser"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </VBox>
                </ScrollPane>
            </AnchorPane>
        </Tab>

        <!-- Onglet Modifier -->
        <Tab fx:id="ModifierUtilisateur" text="Modifier Utilisateur">
            <AnchorPane>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <VBox spacing="10" alignment="CENTER"
                          prefWidth="750.0" prefHeight="550.0">
                        <Label text="Modifier un Utilisateur" style="-fx-font-size: 18px;"/>

                        <VBox spacing="5">
                            <Label text="Email de l'utilisateur à modifier:" />
                            <TextField fx:id="searchEmailField" promptText="Entrez l'email"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Nouveau Nom:" />
                            <TextField fx:id="newNomField" promptText="Entrez le nouveau nom"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Nouveau Prénom:" />
                            <TextField fx:id="newPrenomField" promptText="Entrez le nouveau prénom"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Nouveau Téléphone:" />
                            <TextField fx:id="newTelephoneField" promptText="Entrez le nouveau téléphone"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Nouveau Rôle:" />
                            <ComboBox fx:id="newRoleComboBox" promptText="Sélectionnez un rôle"/>
                        </VBox>

                        <HBox>
                            <Button text="Modifier" onAction="#handleEditUser"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </AnchorPane>
        </Tab>

    </TabPane>
</AnchorPane>
