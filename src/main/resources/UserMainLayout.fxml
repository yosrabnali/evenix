<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UserMainLayoutController"
            prefHeight="720" prefWidth="1280"
            stylesheets="@/css/styles.css">
    <!-- SIDEBAR à GAUCHE -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar-user">
            <Label text="LOGO" styleClass="sidebar-logo"/>
            <Button text="Home" fx:id="btnHome" styleClass="sidebar-button"/>
            <Button text="Profile" fx:id="btnProfile" styleClass="sidebar-button"/>
            <Button text="Event" fx:id="btnEvent" styleClass="sidebar-button"/>
            <Button text="Discussions" fx:id="btnDiscussions" styleClass="sidebar-button"/>
            <Button text="Complaint" fx:id="btnComplaint" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- BARRE du HAUT (HEADER) -->
    <top>
        <HBox fx:id="headerBar" styleClass="header-user">
            <!-- Logo ou Titre à gauche -->
            <Label text="MyApp" styleClass="header-logo"/>

            <!-- Champ de recherche au centre -->
            <TextField fx:id="txtSearch" promptText="Recherche..." styleClass="header-search"/>

            <!-- Nom user (ex. Yosra) et bouton Logout à droite -->
            <Label fx:id="lblUserName" text="Yosra" styleClass="header-username"/>
            <Button fx:id="btnLogout" text="Logout" styleClass="header-logout"/>
        </HBox>
    </top>

    <!-- CONTENEUR CENTRAL : stackpane ou anchorpane -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content-area"/>
    </center>
</BorderPane>
