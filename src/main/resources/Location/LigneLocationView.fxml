<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Locations.LigneLocationController">
    <children>
        <TableView fx:id="ligneLocationTableView" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <columns>
                <TableColumn fx:id="colLigneId" prefWidth="75.0" text=" ID" />
                <TableColumn fx:id="colNomMateriel" prefWidth="150.0" text="Material Name" />
                <TableColumn fx:id="colQuantite" prefWidth="75.0" text="Quantity" />
                <TableColumn fx:id="colMontantTotal" prefWidth="100.0" text="Total Amount" />
            </columns>
        </TableView>
        <!-- Add the WebView -->
        <WebView fx:id="webView" visible="false" prefWidth="200" prefHeight="100" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
        <Button layoutX="400.0" layoutY="350.0" mnemonicParsing="false" onAction="#telechargerPDF" text="Download PDF" />
        <Button layoutX="500.0" layoutY="350.0" mnemonicParsing="false" onAction="#retour" text="Back" />
    </children>
</AnchorPane>