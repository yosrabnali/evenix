<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane  xmlns:fx="http://javafx.com/javafx/1"
             fx:controller="controllers.Events.ReservationController">
    <children>
        <VBox alignment="CENTER" spacing="10" prefWidth="600" prefHeight="400">
            <Label text="Réservation de l'Événement" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="eventTitle" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="eventDate" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="eventLieu" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Places disponibles:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="eventPlaces" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Prix (€):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <Label fx:id="eventPrice" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Nombre de places:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="nbPlacesField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Mode de Paiement:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <ComboBox fx:id="paymentMethod" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Confirmer" fx:id="confirmButton"/>
                <Button text="Annuler" fx:id="cancelButton"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
