<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.FlowPane?>
<BorderPane prefHeight="1280"  prefWidth="720" styleClass="main-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Events.EventAdminController">
    <!-- Lien vers la feuille de style -->
    <stylesheets>
        <URL value="@../css/EventAdmin.css" />
    </stylesheets>

    <!-- Barre supérieure : Titre et bouton pour ajouter un événement -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddEvent" onAction="#handleAddEvent" styleClass="add-button" text="+" />
        </HBox>
    </top>

    <!-- Zone centrale : contient un ScrollPane et un FlowPane pour les cartes -->
    <center>
        <StackPane alignment="CENTER" >
            <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="event-scroll-pane">
                <content>
                    <FlowPane fx:id="flowPaneEvents" hgap="20" styleClass="event-container" vgap="20">
                        <children>
                            <VBox spacing="10" styleClass="event-card">
                                <children>
                                    <!-- Image (exemple) -->
                                    <Label style="-fx-font-size: 12; -fx-text-fill: gray;" text="(Image placeholder)" />
                                    <!-- Titre de l'événement -->
                                    <Label styleClass="event-title" text="Sample Title" />
                                    <!-- Boutons Edit / Delete -->
                                    <HBox spacing="10" styleClass="button-container">
                                        <children>
                                            <Button styleClass="btn-edit" text="Edit" />
                                            <Button styleClass="btn-delete" text="Delete" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                    </FlowPane>
                </content>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>
