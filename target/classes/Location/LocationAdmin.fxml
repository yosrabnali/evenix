<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Locations.LocationsController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <!-- ComboBox pour filtrer par status -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </padding>
                <Label text="Filtrer by status :" />
                <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" promptText="Status" style="-fx-background-radius: 15;" />
            </HBox>

            <!-- ComboBox pour trier par date -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </padding>
                <Label text="Sort by date:" />
                <ComboBox fx:id="dateSortComboBox" prefWidth="200.0" promptText="Trier par date" style="-fx-background-radius: 15;" />
            </HBox>

            <!-- TableView pour afficher les locations -->
            <TableView fx:id="tableView" prefHeight="318.0" prefWidth="492.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colDateDebut" prefWidth="150.0" text="Start Date" />
                    <TableColumn fx:id="colDateFin" prefWidth="150.0" text="End Date" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                </columns>
            </TableView>

            <!-- Formulaire pour ajouter/modifier une location -->
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <!-- Date Début et Date Fin -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <Label text="Start Date:" />
                    <DatePicker fx:id="dateDebutPicker" />

                    <Label text="End Date:" />
                    <DatePicker fx:id="dateFinPicker" />
                </HBox>

                <!-- Boutons pour les actions CRUD -->
                <HBox alignment="CENTER" spacing="10.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <Button mnemonicParsing="false" onAction="#addLocation" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-background-radius: 15;" text="Add a rent " />
                    <Button mnemonicParsing="false" onAction="#modifyLocation" style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-background-radius: 15;" text="Modify a rent" />
                    <Button mnemonicParsing="false" onAction="#deleteLocation" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-background-radius: 15;" text="Delete a rent" />
                    <Button mnemonicParsing="false" onAction="#showDetails" style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-background-radius: 15;" text="Show Détails" />
                </HBox>
            </VBox>
        </children>
    </VBox>
</AnchorPane>
